package br.com.array.teste;

public class TesteNumero {

	public static void main(String[] args) {

		public class Numeros {
			private int[] vetor = new int[3];

			public Numeros(int a, int b, int c) {
				vetor[0] = a;
				vetor[1] = b;
				vetor[2] = c;
			}

			public int getNumero(int posicao) {
				if (posicao >= 0 && posicao < 3) {
					return vetor[posicao];
				} else {
					throw new IllegalArgumentException("Posição inválida");
				}
			}

			public void setNumero(int posicao, int valor) {
				if (posicao >= 0 && posicao < 3) {
					vetor[posicao] = valor;
				} else {
					throw new IllegalArgumentException("Posição inválida");
				}
			}

			public void imprimirNumeros() {
				System.out.println("Números: " + vetor[0] + ", " + vetor[1] + ", " + vetor[2]);
			}

			public void exibirNumeros() {
				System.out.println("Numeros: " + vetor[0] + ", " + vetor[1] + ", " + vetor[2]);
			}

			public static void main(String[] args) {
				Numeros numeros = new Numeros(1, 2, 3);

				// Usando o método exibirNumeros para mostrar os números
				numeros.exibirNumeros();

				// Alterando os números
				numeros.setNumero(0, 4);
				numeros.setNumero(1, 5);
				numeros.setNumero(2, 6);

				// Usando o método exibirNumeros novamente para mostrar as alterações
				numeros.exibirNumeros();
			}
		}
	}
}
